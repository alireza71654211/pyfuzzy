def lamda_cut(U,A,S):
    if not isinstance(U, dict):
        raise TypeError ("U should be a dictionary and should have all key values.")
    flag=0
    for i in range(len(U)):
        if not (0 <= U[i] <= 1):
            flag=1
    if flag==1:
        raise TypeError("values should be between 0 and 1.")
    if not isinstance(A, float):
        raise TypeError ("A should be a float.")
    if not (0 <= A <= 1):
        raise TypeError ("A should be a number between 0 and 1.")

    list=[]
    if S=="boolean":
        for j in range(len(U)):
            if U[j] < A:
                list.append(0)
            elif U[j] >= A:
                list.append(1)
    elif S=="crisp":
        for k in range(len(U)):
            if U[k] >= A:
                list.append(k)
            elif U[k] >= A:
                continue
    elif not (S == ("crisp" or "boolean")):
        raise TypeError ("Wrong request")

    return list
